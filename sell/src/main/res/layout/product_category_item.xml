<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_8dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:paddingHorizontal="@dimen/margin_8dp"
        android:textColor="@color/asphalt"
        android:textSize="@dimen/text_16sp"
        tools:text="Солнечный воздух" />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_name"
        android:layout_alignStart="@id/tv_product_name"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:paddingHorizontal="@dimen/margin_8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_20sp"
        tools:text="157.00 с" />

    <ImageView
        android:id="@+id/iv_next_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_product_name"
        android:layout_alignBottom="@id/tv_product_price"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_32dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

</RelativeLayout>