<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/margin_4dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_drawer_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_baseline_close_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/menu"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_20sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:text="@string/text_shift_opening"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:text="@string/text_date_opening"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20sp" />

    <Button
        android:id="@+id/btn_menu_item_sale"
        style="@style/GreenButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_14dp"
        android:paddingBottom="@dimen/margin_14dp"
        android:text="@string/text_sale" />

    <Button
        android:id="@+id/btn_menu_item_return"
        style="@style/OrangeButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_14dp"
        android:paddingBottom="@dimen/margin_14dp"
        android:text="@string/text_return" />

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius_10dp"
        app:cardBackgroundColor="@color/darkGrey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <kg.nurtelecom.ofd.cell.CellView
                android:id="@+id/btn_menu_item_greeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:showArrowIcon="true"
                app:title="@string/main_greeting" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius_10dp"
        app:cardBackgroundColor="@color/darkGrey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <kg.nurtelecom.ofd.cell.CellView
                android:id="@+id/btn_menu_item_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:showArrowIcon="true"
                app:subTitle="@string/text_interim_report"
                app:title="@string/text_report" />

            <kg.nurtelecom.ofd.cell.CellView
                android:id="@+id/btn_menu_item_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:showArrowIcon="true"
                app:subTitle="@string/text_history_list"
                app:title="@string/text_history" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius_10dp"
        app:cardBackgroundColor="@color/darkGrey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <kg.nurtelecom.ofd.cell.CellView
                android:id="@+id/btn_menu_item_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:showArrowIcon="true"
                app:title="@string/text_information" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius_10dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_16dp"
        app:cardBackgroundColor="@color/darkGrey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <kg.nurtelecom.ofd.cell.CellView
                android:id="@+id/btn_menu_item_operations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:showArrowIcon="true"
                app:subTitle="@string/text_operations_list"
                app:title="@string/text_operations" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_menu_item_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:background="@null"
        android:text="@string/text_shift_closing_and_report"
        android:textColor="@color/red"
        android:textSize="@dimen/text_14sp" />
</LinearLayout>
