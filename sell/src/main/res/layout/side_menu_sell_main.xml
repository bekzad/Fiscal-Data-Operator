<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/margin_16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="false"
    android:focusable="false">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_14sp"
        android:text="@string/text_shift_opening"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_20sp"
        android:text="27.06.20 / 08:45 "
        />

    <Button
        android:id="@+id/sell_main_menu_item_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_14dp"
        android:paddingBottom="@dimen/margin_14dp"
        style="@style/GreenButtonStyle"
        android:text="@string/text_sale" />
    <Button
        android:id="@+id/sell_main_menu_item_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_14dp"
        android:paddingBottom="@dimen/margin_14dp"
        style="@style/OrangeButtonStyle"
        android:text="@string/text_return" />

    <kg.nurtelecom.ofd.cell.CellView
        android:id="@+id/sell_main_menu_item_greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        app:title="@string/main_greeting"
        app:showArrowIcon="true" />
    <kg.nurtelecom.ofd.cell.CellView
        android:id="@+id/sell_main_menu_item_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_16dp"
        app:title="@string/text_report"
        app:subTitle="@string/text_interim_report"
        app:showArrowIcon="true" />
    <kg.nurtelecom.ofd.cell.CellView
        android:id="@+id/sell_main_menu_item_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        app:title="@string/text_history"
        app:subTitle="@string/text_history_list"
        app:showArrowIcon="true" />
    <kg.nurtelecom.ofd.cell.CellView
        android:id="@+id/sell_main_menu_item_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_16dp"
        app:title="@string/text_information"
        app:showArrowIcon="true" />
    <kg.nurtelecom.ofd.cell.CellView
        android:id="@+id/sell_main_menu_item_operations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        app:title="@string/text_operations"
        app:subTitle="@string/text_operations_list"
        app:showArrowIcon="true"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sell_main_menu_item_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:background="@null"
        android:textColor="@color/red"
        android:textSize="@dimen/text_14sp"
        android:text="@string/text_shift_closing_and_report" />


</LinearLayout>
