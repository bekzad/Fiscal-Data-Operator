<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="@dimen/padding_16dp"
    tools:context=".ui.fragment.payment_method.PaymentByCardFragment">

    <kg.nurtelecom.ofd.sell.InfoCardCellView
        android:id="@+id/ic_sum_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:title_text="@string/sum_pay"
        app:is_editable="false"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <kg.nurtelecom.ofd.sell.InfoCardCellView
        android:id="@+id/ic_received_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        app:title_text="@string/et_received"
        app:is_editable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_sum_card" />

    <Button
        android:id="@+id/btn_continue_card"
        style="@style/btn_green"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:text="@string/btn_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>