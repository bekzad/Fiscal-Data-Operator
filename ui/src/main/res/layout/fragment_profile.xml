<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="kg.nurtelecom.ofd.ui.fragments.ProfileFragment"
    android:background="@color/colorBlack">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="@dimen/app_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/abc_vector_test"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_thin"
            android:gravity="center_vertical"
            android:text="@string/text_profile"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/app_text_large"
            android:layout_marginStart="18dp"
            />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar"
        app:layout_constraintEnd_toEndOf="parent">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_input_field"
        android:layout_marginBottom="@dimen/app_margin">

        <EditText
            android:layout_marginTop="@dimen/app_margin_small"
            android:id="@+id/et_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Фамилия"
            android:background="@null"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/app_text_large"
            android:textColorHint="@color/colorGrey"
            android:gravity="center_horizontal|top"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_input_field"
        android:layout_marginBottom="@dimen/app_margin">

        <EditText
            android:layout_marginTop="@dimen/app_margin_small"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя"
            android:background="@null"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/app_text_large"
            android:textColorHint="@color/colorGrey"
            android:gravity="center_horizontal|top"/>


    </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_field"
            android:layout_marginBottom="@dimen/app_margin">

            <EditText
                android:layout_marginTop="@dimen/app_margin_small"
                android:id="@+id/et_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Отчество"
                android:background="@null"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/app_text_large"
                android:textColorHint="@color/colorGrey"
                android:gravity="center_horizontal|top"/>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_field"
            android:layout_marginBottom="@dimen/app_margin">

            <EditText
                android:layout_marginTop="@dimen/app_margin_small"
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="+996"
                android:background="@null"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/app_text_large"
                android:textColorHint="@color/colorGrey"
                android:gravity="center_horizontal|top"/>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_identification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_field"
            android:layout_marginBottom="@dimen/app_margin">

            <EditText
                android:layout_marginTop="@dimen/app_margin_small"
                android:id="@+id/et_identification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ИНН"
                android:background="@null"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/app_text_large"
                android:textColorHint="@color/colorGrey"
                android:gravity="center_horizontal|top"/>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:backgroundTint="@color/colorGreen"
        android:layout_margin="@dimen/app_margin"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Изменить данные"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/app_text_normal">

    </com.google.android.material.button.MaterialButton>
</androidx.constraintlayout.widget.ConstraintLayout>