<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    tools:context="kg.nurtelecom.ofd.ui.fragments.CreateNewPasswordFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="@dimen/app_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/abc_vector_test"
        app:layout_constraintStart_toStartOf="parent">

    <TextView
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_thin"
        android:gravity="center_vertical"
        android:text="Смена пароля"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/app_text_large"
        android:layout_marginStart="18dp"
        />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_input_field"
        android:layout_marginBottom="@dimen/app_margin"
        android:layout_marginTop="@dimen/app_margin_large"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar"
        app:layout_constraintStart_toStartOf="parent">
        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Новый пароль"
            android:background="@null"
            android:textColorHint="@color/colorGrey"
            android:textSize="@dimen/app_text_large"
            android:layout_marginTop="@dimen/app_margin_small"
            android:inputType="textPassword"
            android:gravity="center_horizontal|top"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/password_visibility_true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginEnd="@dimen/app_margin"
            android:clickable="true"
            android:focusable="true"/>


    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>