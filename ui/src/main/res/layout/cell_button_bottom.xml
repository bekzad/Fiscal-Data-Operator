<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cell_button_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/cell_button_bottom">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_bottom"
                android:text="@string/text_merchant_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/tv_title_bottom" />

            <TextView
                android:id="@+id/tv_subtitle_bottom"
                android:text="@string/text_contact_info"
                app:layout_constraintStart_toStartOf="@id/tv_title_bottom"
                app:layout_constraintTop_toBottomOf="@id/tv_title_bottom"
                style="@style/tv_subtitle_bottom" />

            <ImageView
                android:id="@+id/iv_icon_bottom"
                android:src="@drawable/arrow_right"
                app:layout_constraintBottom_toBottomOf="@id/tv_subtitle_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title_bottom"
                style="@style/iv_icon_bottom" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>