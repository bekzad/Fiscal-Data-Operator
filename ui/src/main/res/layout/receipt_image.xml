<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_horizontal_line_1"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="10dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@color/white"
        android:src="@drawable/horizontal_black_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_horizontal_line_2"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="10dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:background="@color/white"
        android:src="@drawable/horizontal_black_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_horizontal_line_1"
        app:layout_constraintTop_toTopOf="@id/iv_horizontal_line_1" />

    <ImageView
        android:id="@+id/iv_horizontal_line_3"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@color/white"
        android:src="@drawable/horizontal_black_line"
        app:layout_constraintEnd_toEndOf="@id/iv_horizontal_line_1"
        app:layout_constraintStart_toStartOf="@id/iv_horizontal_line_1"
        app:layout_constraintTop_toBottomOf="@id/iv_horizontal_line_1" />

    <ImageView
        android:id="@+id/iv_horizontal_line_4"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="10dp"
        android:background="@color/white"
        android:src="@drawable/horizontal_black_line"
        app:layout_constraintEnd_toEndOf="@id/iv_horizontal_line_2"
        app:layout_constraintStart_toStartOf="@id/iv_horizontal_line_2"
        app:layout_constraintTop_toTopOf="@id/iv_horizontal_line_3" />

    <ImageView
        android:id="@+id/iv_horizontal_line_5"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="10dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:background="@color/white"
        android:src="@drawable/horizontal_black_line"
        app:layout_constraintEnd_toEndOf="@id/iv_horizontal_line_1"
        app:layout_constraintStart_toStartOf="@id/iv_horizontal_line_3"
        app:layout_constraintBottom_toTopOf="@id/iv_horizontal_line_7"  />

    <ImageView
        android:id="@+id/iv_horizontal_line_6"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="10dp"
        android:background="@color/white"
        android:src="@drawable/horizontal_black_line"
        app:layout_constraintEnd_toEndOf="@id/iv_horizontal_line_2"
        app:layout_constraintStart_toStartOf="@id/iv_horizontal_line_2"
        app:layout_constraintTop_toTopOf="@id/iv_horizontal_line_5" />

    <ImageView
        android:id="@+id/iv_horizontal_line_7"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="10dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:background="@color/white"
        android:src="@drawable/horizontal_black_line"
        app:layout_constraintEnd_toEndOf="@id/iv_horizontal_line_1"
        app:layout_constraintStart_toStartOf="@id/iv_horizontal_line_5"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_horizontal_line_8"
        android:layout_width="@dimen/margin_0dp"
        android:layout_height="10dp"
        android:background="@color/white"
        android:src="@drawable/horizontal_black_line"
        app:layout_constraintEnd_toEndOf="@id/iv_horizontal_line_2"
        app:layout_constraintStart_toStartOf="@id/iv_horizontal_line_6"
        app:layout_constraintTop_toTopOf="@id/iv_horizontal_line_7" />

</androidx.constraintlayout.widget.ConstraintLayout>