<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack">
    <ImageView
        android:id="@+id/logo_main"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_app_name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/app_text_normal"
        app:layout_constraintTop_toBottomOf="@id/logo_main"
        app:layout_constraintStart_toStartOf="@id/app_version"
        app:layout_constraintEnd_toEndOf="@id/app_version"
        android:layout_marginTop="@dimen/app_margin"/>
    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_app_version"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/app_text_normal"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/app_margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>